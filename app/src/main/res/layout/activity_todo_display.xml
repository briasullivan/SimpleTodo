<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvTodoText"
                    android:textSize="7pt" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due Date: "
                    android:id="@+id/tvDueDateLabel"
                    android:layout_marginRight="5dp"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_purple"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvDueDateText"
                    android:layout_toEndOf="@id/tvDueDateLabel"
                    android:textSize="7pt"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due Time: "
                    android:id="@+id/tvDueTimeLabel"
                    android:textSize="9pt"
                    android:textColor="@android:color/holo_purple"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvDueTimeText"
                    android:layout_toEndOf="@id/tvDueTimeLabel"
                    android:textSize="7pt"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urgency: "
                    android:id="@+id/tvUrgencyLabel"
                    android:textSize="9pt"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_purple"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvUrgencyText"
                    android:layout_toEndOf="@id/tvUrgencyLabel"
                    android:textSize="7pt"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repeat: "
                    android:id="@+id/tvRepeatLabel"
                    android:textSize="9pt"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/tvRepeatText"
                    android:layout_toEndOf="@id/tvRepeatLabel"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp">

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done?"
                    android:id="@+id/statusSwitch"
                    android:textSize="9pt"
                    android:textColor="@android:color/holo_purple"
                    android:textStyle="bold"
                    android:switchPadding="10dp" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
